# Configuración de la aplicación
NODE_ENV=production
PORT=3000

# Base de datos MongoDB
MONGODB_CONNECTION=mongodb://admin:password@mongo:27017/fusioncol?authSource=admin

# Redis
REDIS_URL=redis://redis:6379

# Firebase (configurar con tus valores reales)
FIREBASE_PROJECT_ID=tu-proyecto-id
FIREBASE_PRIVATE_KEY=tu-clave-privada
FIREBASE_CLIENT_EMAIL=tu-email-cliente

# AWS (si usas S3)
AWS_ACCESS_KEY_ID=tu-access-key
AWS_SECRET_ACCESS_KEY=tu-secret-key
AWS_REGION=us-east-1

# Cloudinary
CLOUDINARY_CLOUD_NAME=tu-cloud-name
CLOUDINARY_API_KEY=tu-api-key
CLOUDINARY_API_SECRET=tu-api-secret

# Email (Brevo/Sendinblue)
BREVO_API_KEY=tu-api-key

# OpenAI
OPENAI_API_KEY=tu-api-key

# JWT Secret
JWT_SECRET=tu-jwt-secret-super-seguro

# Otros servicios
IMAP_HOST=tu-imap-host
IMAP_PORT=993
IMAP_USER=tu-email
IMAP_PASS=tu-password
